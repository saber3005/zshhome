# git command enhancements

git () {
  if [[ $1 != "remaster" ]]; then
    command git $@
    return
  fi
  _remaster
}

_remaster () {
  echo "bash fn _remaster"
  if ! git config --get alias.remaster > /dev/null 2>&1 ; then
    git config --global alias.remaster '!f() { echo "remastering...";}; f'
  fi
  command git remaster
}
